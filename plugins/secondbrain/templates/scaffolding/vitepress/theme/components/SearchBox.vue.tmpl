<template>
  <div class="search-container">
    <button
      class="search-button"
      @click="openSearch"
      aria-label="Search"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.3-4.3"></path>
      </svg>
      <span class="search-text">Search</span>
      <span class="search-shortcut">
        <kbd>⌘</kbd><kbd>K</kbd>
      </span>
    </button>

    <Teleport to="body">
      <div v-if="isOpen" class="search-modal-overlay" @click="closeSearch">
        <div class="search-modal" @click.stop>
          <div class="search-input-container">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="search-icon">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.3-4.3"></path>
            </svg>
            <input
              ref="searchInput"
              v-model="query"
              type="text"
              placeholder="Search knowledge base..."
              class="search-input"
              @input="handleSearch"
              @keydown.escape="closeSearch"
              @keydown.enter="handleEnter"
              @keydown.up.prevent="navigateUp"
              @keydown.down.prevent="navigateDown"
            />
            <div v-if="isSearching" class="search-spinner"></div>
          </div>

          <div v-if="results.length > 0" class="search-results">
            <a
              v-for="(result, index) in results"
              :key="result.id"
              :href="result.path"
              :class="['search-result', { active: index === selectedIndex }]"
              @click="closeSearch"
              @mouseenter="selectedIndex = index"
            >
              <div class="result-entity">{{ result.entity }}</div>
              <div class="result-title">{{ result.title }}</div>
              <div class="result-excerpt">{{ result.excerpt }}</div>
              <div class="result-score">{{ (result.score * 100).toFixed(0) }}%</div>
            </a>
          </div>

          <div v-else-if="query && !isSearching" class="search-empty">
            <p>No results found for "{{ query }}"</p>
            <p class="search-tip">Try using different keywords or broader terms</p>
          </div>

          <div v-else-if="!query" class="search-help">
            <p>Start typing to search your knowledge base</p>
            <div class="search-hints">
              <span><kbd>↑</kbd><kbd>↓</kbd> Navigate</span>
              <span><kbd>Enter</kbd> Open</span>
              <span><kbd>Esc</kbd> Close</span>
            </div>
          </div>
        </div>
      </div>
    </Teleport>
  </div>
</template>

<script setup lang="ts">
import { ref, onMounted, onUnmounted, nextTick } from 'vue'
import { create, insert, search } from '@orama/orama'
import { pluginEmbeddings } from '@orama/plugin-embeddings'

// State
const isOpen = ref(false)
const query = ref('')
const results = ref<SearchResult[]>([])
const selectedIndex = ref(0)
const isSearching = ref(false)
const searchInput = ref<HTMLInputElement | null>(null)

// Types
interface SearchResult {
  id: string
  entity: string
  title: string
  excerpt: string
  path: string
  score: number
}

// Orama database
let db: any = null
let searchIndex: any = null

// Initialize Orama
async function initializeSearch() {
  try {
    // Fetch pre-built index
    const response = await fetch('/search-index.json')
    if (response.ok) {
      searchIndex = await response.json()

      // Create Orama instance with embeddings plugin
      db = await create({
        schema: {
          id: 'string',
          entity: 'string',
          title: 'string',
          content: 'string',
          path: 'string',
          embedding: 'vector[384]'
        },
        plugins: [
          pluginEmbeddings({
            embeddings: {
              model: 'gte-small',
              property: 'content',
              storeEmbeddings: true
            }
          })
        ]
      })

      // Insert documents from index
      for (const doc of searchIndex.documents) {
        await insert(db, doc)
      }
    }
  } catch (error) {
    console.warn('Search index not available, using fallback')
  }
}

// Search handler with debounce
let searchTimeout: NodeJS.Timeout | null = null

async function handleSearch() {
  if (searchTimeout) {
    clearTimeout(searchTimeout)
  }

  if (!query.value.trim()) {
    results.value = []
    return
  }

  searchTimeout = setTimeout(async () => {
    isSearching.value = true
    selectedIndex.value = 0

    try {
      if (db) {
        // Use Orama hybrid search
        const searchResults = await search(db, {
          term: query.value,
          mode: 'hybrid',
          limit: 10
        })

        results.value = searchResults.hits.map((hit: any) => ({
          id: hit.document.id,
          entity: hit.document.entity,
          title: hit.document.title,
          excerpt: truncate(hit.document.content, 150),
          path: hit.document.path,
          score: hit.score
        }))
      } else {
        // Fallback: simple title matching
        results.value = []
      }
    } catch (error) {
      console.error('Search error:', error)
      results.value = []
    } finally {
      isSearching.value = false
    }
  }, 200)
}

// Helpers
function truncate(text: string, maxLength: number): string {
  if (text.length <= maxLength) return text
  return text.slice(0, maxLength).trim() + '...'
}

function openSearch() {
  isOpen.value = true
  nextTick(() => {
    searchInput.value?.focus()
  })
}

function closeSearch() {
  isOpen.value = false
  query.value = ''
  results.value = []
  selectedIndex.value = 0
}

function navigateUp() {
  if (selectedIndex.value > 0) {
    selectedIndex.value--
  }
}

function navigateDown() {
  if (selectedIndex.value < results.value.length - 1) {
    selectedIndex.value++
  }
}

function handleEnter() {
  if (results.value.length > 0) {
    window.location.href = results.value[selectedIndex.value].path
    closeSearch()
  }
}

// Keyboard shortcut
function handleKeydown(e: KeyboardEvent) {
  if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
    e.preventDefault()
    if (isOpen.value) {
      closeSearch()
    } else {
      openSearch()
    }
  }
}

// Lifecycle
onMounted(() => {
  window.addEventListener('keydown', handleKeydown)
  initializeSearch()
})

onUnmounted(() => {
  window.removeEventListener('keydown', handleKeydown)
})
</script>

